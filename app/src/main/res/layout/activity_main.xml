<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#050505"
    android:padding="25dp">
    <TextView android:text="ADGUARD PRO LITE" android:textColor="#00FFCC" android:textSize="28sp" android:textStyle="bold" android:layout_gravity="center"/>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="40dp">
        <TextView android:id="@+id/ads_meter" android:text="ADS BLOCKED: 0" android:textColor="#FF3366" android:textSize="18sp"/>
        <TextView android:id="@+id/data_meter" android:text="DATA SAVED: 0.00 KB" android:textColor="#33FF66" android:textSize="18sp" android:layout_marginTop="10dp"/>
    </LinearLayout>

    <Button android:layout_width="match_parent" android:layout_height="60dp" android:text="ACTIVATE PROTECTION" android:layout_marginTop="60dp" android:backgroundTint="#00FFCC" android:textColor="#000000"/>
</LinearLayout>
